#!/bin/sh
## postinstall

pathToScript=$0
pathToPackage=$1
targetLocation=$2
targetVolume=$3

installer -pkg /private/var/tmp/huskyprint_mac/PCClient_24.1.7.72567.pkg -target $3
installer -pkg /private/var/tmp/huskyprint_mac/Xerox_Print_Driver_5.17.0.pkg -target $3

# Remove any old versions of the husky printers
lpstat -p | awk '{print $2}' | while read printer; do
    if [[ "$printer" == "husky"* ]]; then
        echo "Deleting printer: $printer"
        lpadmin -x $printer
    else if [[ "$printer" == "Husky"* ]]; then
        echo "Deleting printer: $printer"
        lpadmin -x $printer
    fi
    fi
done

# Add husky printers with drivers
# Currently we are using Xerox AltaLink B/C8155

# Husky-BW
echo "Adding Husky-BW"
lpadmin -p "Husky-BW" -D "Husky-BW" -L "Husky-BW" -E -v "lpd://print.mtu.edu/husky-bw" -P "/Library/Printers/PPDs/Contents/Resources/Xerox AltaLink B8155.gz"\
    -o printer-is-shared=false -o XRTrays='SixTraysHCFTT' -o XRHolePunch='23Unit' -o XRFinisher='OF'

# Husky-Color
echo "Adding Husky-Color"
lpadmin -p "Husky-Color" -D "Husky-Color" -L "Husky-Color" -E -v "lpd://print.mtu.edu/husky-color" -P "/Library/Printers/PPDs/Contents/Resources/Xerox AltaLink C8155.gz"\
    -o printer-is-shared=false -o XRTrays='SixTraysHCFTT' -o XRHolePunch='23Unit' -o XRFinisher='OF'

rm -rf /private/var/tmp/huskyprint_mac/

exit 0